<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookingSiteTemplate</title>

    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="css/modern-business.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-success fixed-top">
        <div class="container">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">Քո անունը</a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item"><a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-danger">Ամրագրել</a></li>
                    <li class="nav-item"><a asp-area="" asp-controller="Home" asp-action="Services" class="nav-link">Ծառայություններ</a></li>
                    <li class="nav-item"><a asp-area="" asp-controller="Home" asp-action="Professionals" class="nav-link">Մասնագետներ</a></li>
                    <li class="nav-item"><a asp-area="" asp-controller="Home" asp-action="About" class="nav-link">Մեր մասին</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="">
        @RenderBody()
        <hr />
        <!-- Footer -->
        <footer class="py-5 bg-success">
            <div class="container">
                <p class="m-0 text-center text-white">Copyright &copy; Madatech 2018</p>
            </div>
            <!-- /.container -->
        </footer>
    </div>

    <!-- Bootstrap core JavaScript -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
